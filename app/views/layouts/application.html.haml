!!!
%html
  %head
    %title Blog, Not A Blog
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Blog, Not A Blog
        #navbar.navbar-collapse.collapse
          .navbar-form.navbar-right
            -if user_signed_in?
              = link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'btn btn-success'
            -else
              = link_to 'Sign in with GitHub', user_github_omniauth_authorize_path, class: 'btn btn-success'
    = yield
